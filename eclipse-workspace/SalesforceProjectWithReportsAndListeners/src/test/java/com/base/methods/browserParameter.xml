<?xml version="1.0" encoding="UTF-8"?>
<suite name="CrossBrowser">	 
	<test name="FirefoxBrowser" allow-return-values="true">
		<parameter name="browser" value="firefox" />
		<classes>
			<class name="com.Salesforce.Test.LoginPageTCs" />
		</classes>
	</test>
	<test name="ChromeBrowser" allow-return-values="true">
		<parameter name="browser" value="chrome" />
		<classes>
			<class name="com.Salesforce.Test.OpportunitiesPageTCs" />
			<class name="com.Salesforce.Test.LeadsPageTCs" />
			<class name="com.Salesforce.Test.ContactsPageTCs" />
		</classes>
	</test>
	<test name="EdgeBrowser" allow-return-values="true">
		<parameter name="browser" value="edge" />
		<classes>
			<class name="com.Salesforce.Test.UserMenuDropdownTCs" />
			<class name="com.Salesforce.Test.AccountsPageTCs" />
			<class name="com.Salesforce.Test.RandomScenariosTCs" />
		</classes>
	</test>
</suite>
